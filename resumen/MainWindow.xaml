<Window x:Class="resumen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:resumen"
        mc:Ignorable="d"
        Title="Generador de respuestas" Height="450" Width="800">
    <StackPanel>
        <TextBox Margin="10" Name="txtQuestion" FontSize="24">[Coloca aquí tu pregunta binaria (sí/no)]</TextBox>
        <Button Margin="10" Name="btnAnswer" Click="btnAnswer_Click">Preguntar a C#</Button>
        <TextBox Margin="10" Name="txtAnswer" FontSize="24" Foreground="Green" Text="[Aquí aparecerá la respuesta]"/>
    </StackPanel>
</Window>
